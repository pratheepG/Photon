<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="storage-logging-config" author="pratheepg" runOnChange="true" runAlways="true">

        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM config_properties WHERE id = 'STORAGE-LOGGING'
            </sqlCheck>
        </preConditions>

        <comment>Insert logging config for STORAGE or SPRING_APP_NAME-based app</comment>
        <insert tableName="config_properties">
            <column name="id" value="STORAGE-LOGGING"/>
            <column name="profile" value="${photonProfilesActive}"/>
            <column name="config"
                    value="{
                        &quot;logging.level.root&quot;: &quot;ERROR&quot;,
                        &quot;logging.level.org.springframework&quot;: &quot;ERROR&quot;,
                        &quot;logging.level.com.photon&quot;: &quot;ERROR&quot;,
                        &quot;logging.level.org.springframework.web&quot;: &quot;ERROR&quot;,
                        &quot;logging.level.software.amazon.awssdk&quot;: &quot;ERROR&quot;,
                        &quot;logging.level.software.amazon.awssdk.request&quot;: &quot;ERROR&quot;,
                        &quot;logging.level.software.amazon.awssdk.auth&quot;: &quot;ERROR&quot;
                    }"/>
        </insert>
    </changeSet>
</databaseChangeLog>